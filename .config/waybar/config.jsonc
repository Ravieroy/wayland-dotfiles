{
  "layer": "top",
  "position": "top",

  "modules-center": [
    "hyprland/workspaces",
  ],

  "modules-left": [
    "custom/uptime",
    "cpu",
    "memory",
    "custom/updates",
  ],

  "modules-right": [
    "disk",
    "disk#external",
    "network",
    "backlight",
    "pulseaudio",
    "temperature",
    "clock",
    "battery",
    "custom/exit",
    "tray"
